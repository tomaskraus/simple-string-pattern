{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "paths": {
      "#src/*": ["./src/*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    ".temp/interpret.js",
    ".temp/ssp.ts",
    ".temp/fixtures.ts"
  ]
  // "exclude": ["test/**/*.ts"]
}
